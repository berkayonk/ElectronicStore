@*Define the model*@
@model IEnumerable<Producer>
@*Define ViewData*@
@{
    ViewData["Title"] = "List of available producers.";
}

@*Code Part*@
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.producerPictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.producerName)</th>
                    <th>@Html.DisplayNameFor(model => model.producerDescription)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="img-thumbnail" src="@item.producerPictureURL" alt="@item.producerName" style="max-width: 160px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.producerName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.producerDescription)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-bar-chart-fill" style="color:red"></i>Details </a> -
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> -
                            <a class="btn btn-danger text-white-50" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("CreatePartial", "Producer")
