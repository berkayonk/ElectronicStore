@model Seller
@{
    ViewData["Title"] = "Delete seller.";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete @Model.sellerName.</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-3">
                <div class="form-group">
                    <label asp-for="sellerPictureURL" class="control-label"></label>
                    <input asp-for="sellerPictureURL" class="form-control" readonly />
                    <span asp-validation-for="sellerPictureURL" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="sellerName" class="control-label"></label>
                    <input asp-for="sellerName" class="form-control" readonly />
                    <span asp-validation-for="sellerName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="sellerDescription" class="control-label"></label>
                    <input asp-for="sellerDescription" class="form-control" readonly />
                    <span asp-validation-for="sellerDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <form asp-action="Delete">
                        <input asp-for="Id" type="hidden" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-dark" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>
