@model Seller
@{
    ViewData["Title"] = "Update seller.";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update seller.</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-3">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="sellerPictureURL" class="control-label"></label>
                        <input asp-for="sellerPictureURL" class="form-control" />
                        <span asp-validation-for="sellerPictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="sellerName" class="control-label"></label>
                        <input asp-for="sellerName" class="form-control" />
                        <span asp-validation-for="sellerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="sellerDescription" class="control-label"></label>
                        <input asp-for="sellerDescription" class="form-control" />
                        <span asp-validation-for="sellerDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-dark" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>