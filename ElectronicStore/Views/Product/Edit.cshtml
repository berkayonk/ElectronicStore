@model ProductViewModel
@using ElectronicStore.Data;
@{
    ViewData["Title"] = "Update a new product.";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Update a new product.</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-warning"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="productName" class="control-label"></label>
                                <input asp-for="productName" class="form-control" />
                                <span asp-validation-for="productName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="producyListDate" class="control-label"></label>
                                <input asp-for="producyListDate" type="date" class="form-control" />
                                <span asp-validation-for="producyListDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="productPrice" class="control-label"></label>
                                <input asp-for="productPrice" type="number" class="form-control" />
                                <span asp-validation-for="productPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="productPictureURL" class="control-label"></label>
                                <input asp-for="productPictureURL" class="form-control" />
                                <span asp-validation-for="productPictureURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="sellerID" class="control-label"></label>
                                <select asp-for="sellerID" class="form-control" asp-items="ViewBag.SellerID"></select>
                                <span asp-validation-for="sellerID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="productCategory" class="control-label"></label>
                                <select asp-for="productCategory" class="form-control" asp-items="Html.GetEnumSelectList<ProductCategory>()"></select>
                                <span asp-validation-for="productCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="producerID" class="control-label"></label>
                                <select asp-for="producerID" class="form-control" asp-items="ViewBag.ProducerID"></select>
                                <span asp-validation-for="producerID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="warrantyIDs" class="control-label"></label>
                                <select asp-for="warrantyIDs" class="form-control" asp-items="ViewBag.WarrantyID" multiple></select>
                                <span asp-validation-for="warrantyIDs" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="productDescription" class="control-label"></label>
                                <textarea asp-for="productDescription" class="form-control"></textarea>
                                <span asp-validation-for="productDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Return to Products</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>